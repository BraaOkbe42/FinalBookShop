@model IEnumerable<Book>


<div class="row">
    <div class="col-md-4">
        @foreach (var item1 in Model)
        {
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="@item1.ImgUrl" width="100" height="255" alt="Card image cap">
                <div class="card-body">
                    <p>@item1.Title</p>
                    <p>@item1.description</p>
                </div>
            </div>
        }
    </div>
</div>


